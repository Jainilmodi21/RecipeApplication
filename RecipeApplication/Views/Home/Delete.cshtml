@model RecipeApplication.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap CSS Link -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

<div class="container text-center my-5">
    <h2 style="font-family: 'Poppins', sans-serif;">Are you sure you want to delete this recipe?</h2>

    <div class="card mx-auto" style="max-width: 600px;">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Recipe Image" style="max-height: 300px; object-fit: cover;" />
        <div class="card-body">
            <h5 class="card-title" style="font-family: 'Poppins', sans-serif;">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="RecipeId" />
                <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>

<!-- Optional Custom CSS -->
<style>
    /* Custom styling */
    h2 {
        color: #dc3545; /* Danger color */
        font-weight: 600;
        margin-bottom: 20px;
    }

    .card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        color: #6c757d; /* Gray color */
    }

    .btn-lg {
        font-size: 1.25rem; /* Larger button text */
        padding: 10px 20px;
    }
</style>
